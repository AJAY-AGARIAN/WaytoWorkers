<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/department"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="DEPARTMENTS"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Switch
                android:id="@+id/switchLocationOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Near your location"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/farmer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/agriculture"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Farmer"
                    android:textSize="20sp"
                    android:textAlignment="center" />

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/contractor"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/contractor"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contractor"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/carpenter"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/carpenter"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carpenter"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/laundry"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/laundry"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laundry"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/services"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/services"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/mechanic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/mechanic"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mechanic"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/electrician"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/electrician"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Electrician"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/chef"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/chef"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chef"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/hairdresser"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/salon"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hairdresser"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>


</RelativeLayout>